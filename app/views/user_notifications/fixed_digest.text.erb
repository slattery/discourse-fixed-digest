<%- site_link = raw(@markdown_linker.create(@site_name, '/')) %>
<%= raw(t 'user_notifications.fixed_digest.why',
      site_link: site_link,
      last_seen_at: @last_seen_at) %>
--------------------------------------------------------------------------------
<%- if @recent_topics.present? && @recent_topics.size > 0 %>
### <%=t 'user_notifications.fixed_digest.recent_topics' %>

<%- @recent_topics.each_with_index do |t,i| %>
<%= raw(@markdown_linker.create(t.title, t.url)) %>

<%- if t.first_post.present? %>
 <%= raw(t.first_post.excerpt(1000, strip_links: true, text_entities: true, markdown_images: true)) %>
--------------------------------------------------------------------------------

<%- end %>
<%- end %>

<%- end %>

<%= raw(@markdown_linker.references) %>

--------------------------------------------------------------------------------
<%- if @active_topics.present? && @active_topics.size > 0 %>
### <%=t 'user_notifications.fixed_digest.active_topics' %>

<%- @active_topics.each_with_index do |t,i| %>
<%= raw(@markdown_linker.create(t.title, t.url)) %>

<%- if t.first_post.present? %>
 <%= raw(t.first_post.excerpt(1000, strip_links: true, text_entities: true, markdown_images: true)) %>
--------------------------------------------------------------------------------

<%- end %>
<%- end %>

<%- end %>

<%= raw(@markdown_linker.references) %>

<%= digest_custom_text("above_footer") %>
<%=raw(t :'user_notifications.fixed_digest.unsubscribe',
     site_link: site_link,
     site_help: raw(@markdown_linker.create(t('user_notifications.fixed_digest.site_help'), Discourse.base_url + '/c/site-help')),
     email_preferences_link: raw(@markdown_linker.create(t('user_notifications.fixed_digest.your_email_settings'), '/my/preferences/emails')),
     unsubscribe_link: raw(@markdown_linker.create(t('user_notifications.fixed_digest.click_here'), "/email/unsubscribe/#{@unsubscribe_key}")))  %>

<%= raw(@markdown_linker.references) %>
